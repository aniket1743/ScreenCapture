{
  "manifest_version": 2,

  "name": "Capture Screen",
  "description": "Take ScreenShot",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "debugger",
    "desktopCapture",
    "tabs",
    "<all_urls>",
    "tabCapture",
    "https://ajax.googleapis.com/"
  ]
}